.pg-index {
  padding-bottom: 130px;

  .item {
    padding: 10px;
    border-bottom: 1px solid transparent;
    background: rgba(0, 0, 0, .05);
    display: flex;
    align-items: center;

    &:nth-child(odd) {
      background: rgba(0, 0, 0, .1);
    }

    .num {
      color: gray;
    }

    .content {
      margin: 0 8px;
      flex: 1;
    }

    .time {
      font-size: .6em;
      color: gray;
    }
  }

  .create {
    position: fixed;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    width: 50px;
    height: @width;
    background: antiquewhite;
    border-radius: 50%;

    .one, .two {
      position: absolute;
      left: 20%;
      width: 60%;
      height: 10%;
      background: #ff9e72;
      top: 50%;
    }

    .one {
      transform: translateY(-50%);
    }

    .two {
      transform: translateY(-50%) rotate(90deg);
    }
  }
}