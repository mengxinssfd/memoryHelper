.q-select {
  position: fixed;
  z-index: 100;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  background: white;
  padding-top: 10px;

  .list-area {
    padding: 0 10px;
    overflow-y: auto;

    .q-item {
      position: relative;
      padding: 10px;
      border-bottom: 1px solid #fffeee;
      background: rgba(0, 0, 0, .05);
      display: flex;
      align-items: center;

      &:nth-child(odd) {
        background: rgba(0, 0, 0, .1);
      }

      text {
        font-size: .6em;
      }

      .content {
        flex: 1;
        margin: 0 8px;
        font-size: .8em;
      }

      .operate {
        display: flex;
        font-size: .4em;

        .mark {
          position: absolute;
          top: 0;
          right: 0;
        }
      }
    }
  }

  .btn-area {
    flex: 1;
    width: 100%;
    padding-top: 10px;

    .count {
      margin-bottom: 10px;
      padding: 0 10px;
      text-align: right;
    }
  }

}
