.pg-playing {
  padding: 10px;

  .picker {
    margin-bottom: 10px;
  }

  .setting {
    margin-bottom: 10px;
    background: rgba(0, 0, 0, .05);
    padding: 6px;

    .content {
      padding: 6px;
      font-size: .8em;

      .item {
        margin-top: 6px;

        radio {
          margin-left: 6px;
          width: 10px;
          height: @width;
        }

        &.total-time, &.time {
          display: flex;
          align-items: center;

          label {
            flex: 1;
          }

          input {
            flex: 1;
            margin-left: 6px;
            border-bottom: 1px solid white;
            text-indent: 6px;
          }
        }
      }
    }
  }

  button {
    width: 100% !important;
    margin-bottom: 10px;
  }
}