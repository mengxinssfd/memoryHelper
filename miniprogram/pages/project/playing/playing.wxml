<view class="cp-play">
    <view class="mask" bindtap="onTapMask"></view>
    <view class="content">
        <view class="len">剩余：{{qList.length+1}}</view>
        <!--   <view class="time-area">
           </view>-->
        <view class="question">问：{{setting.isReverse?currentQuestion.answer:currentQuestion.question}}</view>
        <input
                value="{{inputValue}}"
                class="weui-input answer"
                placeholder="输入答案"
                bindinput="onInputAnswer"/>
        <button type="primary" bindtap="onTapConfirm">确定</button>
        <button disabled="{{!setting.canJump}}" bindtap="onTapJump">跳过</button>
        <button disabled="{{!setting.canShowAnswer}}" bindtap="onTapShowAnswer">{{isShowAnswer?"隐藏":"显示"}}答案</button>
        <block wx:if="{{isShowAnswer}}">
            <view class="show-answer">{{setting.isReverse?currentQuestion.question:currentQuestion.answer}}</view>
            <view class="show-desc">{{currentQuestion.desc}}</view>
        </block>
    </view>
</view>