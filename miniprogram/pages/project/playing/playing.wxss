.cp-play .mask {
  position: fixed;
  left: 0;
  top: 0;
  z-index: 100;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.5);
}
.cp-play .content {
  position: fixed;
  z-index: 110;
  top: 50%;
  left: 50%;
  width: 80%;
  padding: 10px;
  background: #fff;
  transform: translate(-50%, -50%);
  text-align: center;
  border-radius: 6px;
}
.cp-play .content .question {
  margin-bottom: 10px;
}
.cp-play .content .input-answer {
  margin-bottom: 10px;
}
.cp-play .content .len {
  text-align: right;
  margin-bottom: 10px;
  font-size: 0.8em;
}
.cp-play .content .show-desc {
  margin-top: 6px;
  font-size: 0.8em;
}
.cp-play .content button {
  margin-bottom: 10px;
}
.cp-play .content .jump-conf-box {
  display: flex;
}
.cp-play .content .btn-confirm,
.cp-play .content .btn-jump {
  flex: 1;
}
.cp-play .content .btn-jump {
  border-bottom-right-radius: 0;
  border-top-right-radius: 0;
}
.cp-play .content .btn-confirm {
  border-bottom-left-radius: 0;
  border-top-left-radius: 0;
}
.cp-play .content .operate {
  margin-bottom: 10px;
  display: flex;
  align-content: space-evenly;
  font-size: 0.6em;
}
.cp-play .content .operate checkbox-group {
  display: inline-block;
}

